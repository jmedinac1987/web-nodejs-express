doctype html
html(lang="es")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title #{title}: Proyecto Nodejs y Express
    // Bootstrap core CSS
    link(href="/stylesheets/bootstrap.min.css", rel="stylesheet")
    // Custom styles for this template
    link(href='/stylesheets/style.css', rel='stylesheet')
    link(href="/stylesheets/starter-template.css", rel="stylesheet")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css")        
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.mb-4.fixed-top
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarTogglerDemo01", aria-controls="navbarTogglerDemo01", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
      #navbarTogglerDemo01.collapse.navbar-collapse
        a.navbar-brand(href="/") HJ Consultores
        ul.navbar-nav.mr-auto.mt-2.mt-lg-0
          li(class=(title === "Inicio" ? 'nav-item active' : ''))
            a.nav-link(href="/") Inicio
          li(class=(title === "Nosotros" ? 'nav-item active' : ''))
            a.nav-link(href="/nosotros") Nosotros
          li(class=(title === "Mensaje" ? 'nav-item active' : ''))
            a.nav-link(href="/mensaje") Mensaje
    block content
    hr
    footer
      p(class='text-center') &copy; 2018 Proyecto con Nodejs, Express y Nodemailer
    script(src="/javascripts/jquery-3.3.1.js")
    script(src="/javascripts/bootstrap.min.js")